
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/_MyLayout.cshtml";
}

@section navigation {
    <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
    <li>@Html.ActionLink("Menu", "Index", "CustomerOrder")</li>
    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/Images/home-pizza.jpg" alt="Los Angeles" style="width:100%;">
        </div>

        <div class="item">
            <img src="~/Content/Images/home-coke.jpg" alt="Chicago" style="width:100%;">
        </div>

        <div class="item">
            <img src="~/Content/Images/home-combo.png" alt="New york" style="width:100%;">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div>
    <div class="col-sm-4 col-xs-12">
        <h2><span class="label label-danger">SALE OFF</span></h2><br />
        <h4>Free drink for buying at store</h4>
        <p style="margin: 10px 0; line-height: 30px;">
            - <b>Two</b> pizza size S free <b>One</b> S drink<br />
            - <b>Two</b> pizza size M free <b>One</b> M drink<br />
            - <b>Two</b> pizza size L free <b>One</b> L drink<br />
        </p><br />
        <h4>
            Sale on Wed, Sat and Sun weekly
        </h4>
        <p style="margin: 10px 0; line-height: 30px;">
            - 15% discount for Two pizza size S<br />
            - 25% discount for Two pizza size M<br />
            - 35% discount for Two pizza size L<br />
        </p>
    </div>
    <div class="col-sm-4 col-xs-12">
        <h2><span class="label label-danger">Menu</span></h2><br />
        <p>
            With a team of professional chefs, the menu of Pizza Express is always renewed
            with delicious and unique pizzas.
        </p><br />
        <p>
            Pizza Express is proud to bring guests new Asian and European cuisine
            in their own home.
        </p>
    </div>
    <div class="col-sm-4 col-xs-12">
        <h2><span class="label label-danger">Order & Delivery</span></h2><br />
        <p>Open everyday, except Lunar New Year.</p><br />
        <p>
            We accept orders from 9h - 20h. Free delivery within 4km.
            <br />Phone: (0243) 666 888
        </p><br />
        <p>You can go to buy directly at store. <br />Open Hours: 8h - 21h.</p>
    </div>
</div>